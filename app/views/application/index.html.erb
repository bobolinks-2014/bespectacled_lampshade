<p> Enter Your Location Information </p>
    <%=form_tag(root_path, method: 'get', id: "user") do%>

    <%= text_field_tag 'starting_point', nil , placeholder: "Starting Point", class: "starting_point", id:"autocomplete", onFocus: "geolocate"%>

    <%= text_field_tag 'destination', nil, placeholder: "Destination", class: "destination", onFocus: "geolocate", id:"autocomplete_destination"%>

    <p> Enter Your Car Information </p>
      <%= select_tag "make", options_for_select(@make),:prompt => "Make"%>
      <%= select_tag "model", options_for_select([]) ,:prompt => "Model"%>
      <%= select_tag "year", options_for_select([]),:prompt => "Year" %>
    <%=submit_tag "submit", class: "button car-info", style: "visibility:hidden" %>
    <% end %>

<hr>
<div class = "large-12 columns">
  <div id = "transit" class = "panel small-3 columns">
    <h2> Public Transit Directions </h2>
    <div id = "directions"></div>
    <div id = "fareCost"> </div>
  </div>
  <div class="small-9 columns panel cards">
  </div>
</div>


